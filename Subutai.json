{
  "name": "${environmentName}",
  "description": "Subutai test blueprint with port-mappings",
  "version": "1.0.1",
  "author": "Zubaidullo",
  "containers": [
    {
      "hostname": "mysql",
      "template": "ubuntu16",
      "peer-criteria": "peer-test",
      "size": "SMALL"
    },
    {
      "hostname": "apache",
      "template": "apache",
      "peer-criteria": "peer-test",
      "size": "SMALL",
      "port-mapping": []
    }
  ],
  "peer-criteria": [
    {
      "name": "peer-test",
      "max-price": "50"
    }
  ],
  "configuration": {
    "source-url": "https://github.com/platium1/simple-bleprint/archive/master.zip",
    "ansible-playbook": "main.yml",
    "arguments": [
      {
        "key": "key1",
        "value": "value1"
      }
    ],
    "groups": [
      {
        "name": "db",
        "hostnames": [
          "mysql"
        ]
      },
      {
        "name": "mattermost",
        "hostnames": [
          "apache"
        ]
      }
    ]
  }
}
