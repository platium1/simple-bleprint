{
  "name": "Training-Environment-Minimal",
  "description": "The minimal blueprint",
  "containers": [
    {
      "hostname": "mysql",
      "template": "mysql@280dcda67a67d071970ff838d0331c33c0c04710",
      "peer-criteria": "HTTP-GROUP",
      "size": "SMALL"
    },
    {
      "hostname": "mattermost",
      "template": "mattermost@280dcda67a67d071970ff838d0331c33c0c04710",
      "peer-criteria": "HTTP-GROUP",
      "size": "SMALL",
      "port-mapping": [
        {
          "protocol": "http",
          "domain": "${domain2}",
          "internal-port": "8065",
          "external-port": "9090"
        }
      ]
    }
  ],
  "peer-criteria": [
    {
      "name": "HTTP-GROUP",
      "max-price": "50"
    }
  ],
  "configuration": {
    "source-url": "https://github.com/platium/mattermost/archive/master.zip",
    "ansible-playbook": "main.yml",
    "arguments": [
      {
        "key": "key1",
        "value": "value1"
      }
    ],
    "groups": [
      {
        "name": "db",
        "hostnames": [
          "mysql"
        ]
      },
      {
        "name": "mattermost",
        "hostnames": [
          "mattermost"
        ]
      }
    ]
  },
  "user-variables": {
    "domain": {
      "description": "Select your domain or create new one",
      "type": "domain",
      "default": "mattermost.envs.subutai.cloud",
      "validation": "[a-zA-Z0-9.-]+"
    }
  }
}
